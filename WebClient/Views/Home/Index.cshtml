@{
    ViewData["Title"] = "Home Page";
}

<section class="flex flex-col justify-center items-end lg:pr-24 h-[70vh] w-full text-center" style="background-image: url(img/plants-ia-generated.webp); background-repeat: no-repeat; background-size: cover;">
    <div class="w-full lg:w-1/2 bg-black/30 flex flex-col items-center p-2 lg:p-8">
        <h3 class="text-5xl text-white font-bold font-serif mt-8 mb-4">Indoor Plants Bundle</h3>
        <p class="text-lg text-white mb-8 w-3/4">Enhance your indoor spaces with our selection of houseplants, bringing greenery and freshness to your home.</p>
    </div>

</section>

<section class="grid grid-cols-1 lg:grid-cols-3 gap-8 p-8">
    <article class="relative w-full h-96 flex flex-col justify-end items-center overflow-hidden">
        <img src="/img/indoor-plant.jpg" class="absolute hover:scale-110 transition-all ease-in-out duration-500 h-full w-full object-cover z-0" />
        <a asp-controller="Shop" asp-action="Index" asp-route-tag="Indoor" class="bg-golden-600 text-white hover:bg-golden-400 p-3 font-medium z-[1] mb-8 transition-all ease-in-out duration-200">Indoor Plants</a>
    </article>

    <article class="bg-zuccini-200 w-full h-96 flex flex-col justify-end items-center text-center p-8">
        <h3 class="text-3xl text-zuccini-950 font-bold font-serif mt-8 mb-4">No garden?
            No problem!</h3>
        <p class="text-lg text-zuccini-800 mb-8">Enhance your indoor spaces with our selection of houseplants, bringing greenery and freshness to your home.</p>
        <a asp-controller="Shop" asp-action="Index" class="bg-zuccini-700 text-white font-medium p-3 hover:bg-zuccini-400 transition-all ease-in-out duration-200 cursor-pointer">SHOP NOW</a>
    </article>

    <article class="relative w-full h-96 flex flex-col justify-end items-center overflow-hidden">
        <img src="/img/outdoor-plant.jpg" class="absolute hover:scale-110 transition-all ease-in-out duration-500 h-full w-full object-cover z-0" />
        <a asp-controller="Shop" asp-action="Index" asp-route-tag="Outdoor" class="bg-golden-600 text-white hover:bg-golden-400 p-3 font-medium z-[1] mb-8 transition-all ease-in-out duration-200">Outdoor Plants</a>
    </article>
</section>

