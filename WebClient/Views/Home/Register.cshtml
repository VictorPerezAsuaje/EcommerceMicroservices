<div class="p-8 flex flex-col gap-8">
    <h2 class="text-center text-2xl text-zuccini-900 font-extrabold">My Account</h2>

    <div class="flex flex-col lg:flex-row gap-8 min-h-[50vh] p-16">
        <div class="border border-gray-nurse-100 h-full flex-1 p-16">
            <header class="text-center mb-8">
                <h3 class="text-xl text-zuccini-900 font-bold uppercase mb-4">Create an Account</h3>

                <div class="text-rose-600" asp-validation-summary="All">
                </div>
            </header>            

            <form id="registrationForm" asp-controller="Home" asp-action="Register">
                @Html.AntiForgeryToken()
                <input class="w-full border border-gray-nurse-100 p-2 mb-4" name="FirstName" placeholder="First Name" />
                <input class="w-full border border-gray-nurse-100 p-2 mb-4" name="LastName" placeholder="Last Name" />
                <input class="w-full border border-gray-nurse-100 p-2 mb-4" name="Email" type="email" placeholder="Email" />
                <input class="w-full border border-gray-nurse-100 p-2 mb-4" name="Password" type="password" placeholder="Password" />
                <input class="w-full border border-gray-nurse-100 p-2 mb-4" name="PhoneNumber" placeholder="Phone number" />
            </form>

            <footer class="flex flex-row justify-between gap-8 items-center mt-4">
                <label class="text-sm text-gray-nurse-500 ">
                    <input type="checkbox" class="accent-zuccini-600 mr-4" />
                    Subscribe to stay updated with new products and offers!
                </label>
                <button type="submit" form="registrationForm" class="bg-zuccini-700 text-white font-bold text-sm p-3 hover:bg-zuccini-400 transition-all ease-in-out duration-200 w-fit">REGISTER</button>
            </footer>
        </div>

        <div class="border border-gray-nurse-100 flex-1 p-16 flex flex-col justify-between items-center gap-8 h-full">
            <h3 class="text-xl text-zuccini-900 font-bold uppercaseflex-1">Already have an account?</h3>
            <p class="text-sm text-gray-nurse-500 ">
                Then you don't need to do anything here! Let's go back to the login page.
            </p>
            <a asp-controller="Home" asp-action="Login" class="bg-zuccini-700 text-white font-bold text-sm p-3 hover:bg-zuccini-400 transition-all ease-in-out duration-200 w-fit">GO TO LOGIN</a>
        </div>
    </div>
</div>